<%= form_for :post, :url => { :controller => :municipios, :action => :search } do |f| %>
 <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
              <div class="container-fluid"> 
              	<% if user_signed_in? %>
					<p class="navbar-text pull-right navbar-custom"><%="#{current_user.email}\t"%><%=link_to "Salir", destroy_user_session_path(:authenticity_token => form_authenticity_token()),:method => :delete,class: "navbar-text-blanco"%>
					</p>
					
				<% else %>
					<p class="navbar-text pull-right navbar-custom" data-toggle="modal" data-target="#myModal">Iniciar Sesion</p>
				<% end %>
              </div>
          </div>
  </div>
	<%= image_tag "logo.png", class: "img-responsive center-block" %>          

	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="input-group">
					<div class="input-group-addon">
						<H3><%=f.label 'Ingresa tu municipio' %></H3>
						<BR>
						<%= f.select :municipio, Municipio.all.map { |u| [u.nombre, u.id] },{ include_blank: true }, { class: 'chosen-select' }%>
						</br>
					</div>
				</div>
				<br>
				<%= f.submit 'Continuar', :class => 'btn btn-lg btn-light' %>
			</div>
		</div>
	</div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Puedes iniciar sesi√≥n con:</h4>
      </div>
      <div class="modal-body">
       <%= link_to " | Facebook", user_omniauth_authorize_path(:facebook) ,class: "btn btn-facebook fa fa-facebook btn-lg-social"%>
       <BR>
       <BR>
		<%= link_to " | Linkedin",user_omniauth_authorize_path(:linkedin) ,class: "btn btn-linkedin fa fa-linkedin btn-lg-social"%>
      </div>
    </div>
  </div>
</div>



<div id="fb-root"></div>


