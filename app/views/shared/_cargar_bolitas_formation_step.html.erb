<ol class="carousel-indicators">
  <% count = 0 %>
  <% @procedure_requirement.each_with_index do |procedure,index| %>
  <% @requirements.where(id: procedure.requirement_id).each do |tramite| %>
      <% count += 1 %>
        <%if count==1%>
          <li data-target="#myCarousel" data-slide-to=<%=count-1%> class="active" data-toggle="tooltip" data-placement="bottom" data-original-title='<%=tramite.nombre%>'></li>
        <%else%>
          <li data-target="#myCarousel" data-slide-to=<%=count-1%> data-toggle="tooltip" data-placement="bottom" data-original-title='<%=tramite.nombre%>'></li>
        <%end%>
       <%end%>
  <%end%>
</ol>