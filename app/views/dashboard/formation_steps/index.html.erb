<div id="main" class="container clear-top">
  <div class="row">
    <div class="span12">
      <section id="services">
        <div class="center-block-margin">
          <div class="container">
            <h2> <%= t('titles.formation_steps') %></h2>
            <div class="row text-right">
              <%= link_to t('.new_formation_step'), new_dashboard_formation_step_path, :class => 'btn btn-success btn-xs outlineverde'  %>
            </div>
            <table class="table">
             <thead>
               <th>#</th>
               <th><%= t('.name') %></th>
               <th><%= t('.tipo') %></th>
               <th><%= t('.dependency') %></th>
               <th><%= t('.actions') %></th>
             </thead>
             <tbody>
               <% @formation_steps.each_with_index do |formation, idx| %>
               <%= content_tag :tr do %>
               <%= content_tag :td, idx + 1 %>
               <%= content_tag :td, formation.name %>
               <%= content_tag :td, type(formation.type) %>
               <%= content_tag :td, formation.municipio.nombre %>
               <%= content_tag :td do %>
               <%= link_to t('form.actions.edit'), edit_dashboard_formation_step_path(formation), :class => 'btn btn-success btn-xs outlineverde'  %> 
               <%= link_to t('form.actions.destroy'), dashboard_formation_step_path(formation), method: :delete, data: { confirm: t('form.confirmations.delete_formation_step') } , :class => 'btn btn-success btn-xs outlineverde' %>
               <% end %>
               <% end %>
               <% end %>
             </tbody>
           </table>

           <p>
            Descargar:
            <%= link_to "CSV", dashboard_formation_steps_path( format: "csv") , :class => 'btn btn-success btn-xs outlineverde' %>
            <%#= link_to "XLS", dashboard_formation_steps_path( format: "xls") %>
          </p>
        </div>
      </div>
    </section>
  </div>
</div>
</div>
</div>
